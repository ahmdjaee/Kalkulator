<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
    <EditText
        android:id="@+id/et_angka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Angka 1"
        android:inputType="number"
        android:layout_weight="1"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/et_angka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Angka 2"
        android:inputType="number"
        android:layout_weight="1"
        android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/tv_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10sp"
            android:background="#C51F5D"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2sp"
            android:backgroundTint="#C51F5D"/>
        <Button
            android:id="@+id/btn_kurang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2sp"
            android:backgroundTint="#C51F5D"/>
        <Button
            android:id="@+id/btn_kali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2sp"
            android:backgroundTint="#C51F5D"/>
        <Button
            android:id="@+id/btn_bagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2sp"
            android:backgroundTint="#C51F5D"/>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2sp"
            android:backgroundTint="#C51F5D"/>

    </LinearLayout>



</LinearLayout>